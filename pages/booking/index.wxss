/* pages/booking/index.wxss */
.coach-list {
    display: flex;
    flex-direction: column; /* 垂直排列 */
    padding: 20rpx;
  }
  
  .coach-item {
    display: flex;
    align-items: center; /* 垂直居中 */
    margin-bottom: 20rpx;
    border-bottom: 1px solid #eee;
    padding-bottom: 20rpx;
  }
  
  .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  
  .coach-info {
    flex: 1; /* 占据剩余空间 */
  }
  
  .coach-name {
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .coach-money {
    font-size: 28rpx;
    color: #999;
  }
  
  .contact-button {
    background-color: #07c160;
    color: white;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
  }
  
  .no-coach {
    text-align: center;
    color: #999;
    margin-top: 40rpx;
  }
  .bottom-buttons {
    display: flex;
    justify-content: space-around;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
    padding: 20rpx 0;
    z-index: 999;
    padding-bottom: constant(safe-area-inset-bottom); /* 兼容 iOS < 11.2 */
    padding-bottom: env(safe-area-inset-bottom);     /* 兼容 iOS >= 11.2 */
  }
  .top-button {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100; /* 确保按钮在其他元素之上 */
    background-color: #fff; /* 设置背景颜色，防止按钮被遮挡 */
    padding: 10px; /* 添加内边距 */
    display: flex; /* 使用 flex 布局，方便按钮居中 */
    justify-content: center;
  }
  
  