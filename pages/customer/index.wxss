/* pages/customer/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: stretch;
  }
  
  .schedule {
    width: 90%;
    margin-top: 20rpx;
  }
  
  .schedule-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .schedule-day {
    margin-bottom: 20rpx;
  }
  
  .schedule-day-title {
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .schedule-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
    padding: 10px;
  border-bottom: 1px solid #eee;
  }
  
  .bottom-buttons {
    display: flex;
    justify-content: space-around;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
    padding: 20rpx 0;
    z-index: 999;
    padding-bottom: constant(safe-area-inset-bottom); /* 兼容 iOS < 11.2 */
    padding-bottom: env(safe-area-inset-bottom);     /* 兼容 iOS >= 11.2 */
  }
  
  .swiper-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 9; /* 确保轮播图在其他元素之上，但低于底部按钮 */
    padding-top: constant(safe-area-inset-top); /* 兼容 iOS < 11.2 */
    padding-top: env(safe-area-inset-top);     /* 兼容 iOS >= 11.2 */
  }
  
  swiper {
    width: 100%;
    height: 300rpx; 
  }
  
  swiper image {
    width: 100%;
    height: 100%;
  }
  
  .schedule-item view { 
    width: 60%;
    word-break: break-all;
  }
  .appointment-button {
    padding: 5px 10px;  /* 调整 padding 控制大小 */
    font-size: 12px; /* 调整 font-size 控制大小 */
    border-radius: 5px;
    color: white;
  }
  
  .green-button {
    background-color: green;
  }
  
  .red-button {
    background-color: red;
  }
  
  
  
  